// Générateur Prisma Client
generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  engineType    = "node-api"
}

// Source de données PostgreSQL
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ------------------- USERS -------------------
model Users {
  id        String   @id @default(uuid())
  nom       String
  prenom    String
  email     String   @unique
  phone     String   @unique
  role      Role     @default(PARENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Stripe Customer ID (un parent = un client Stripe)
  stripeCustomerId String? @unique

  // Relations
  children      Children[]
  subscriptions Subscription[]
  driverProfile DriverProfile?
  buses         Bus[]
  scanLogs      ScanLog[]
  anomalies     Anomaly[]
}

enum Role {
  PARENT
  ADMIN
  DRIVER
}

// ------------------- DRIVER PROFILE -------------------
model DriverProfile {
  id     String @id @default(uuid())
  user   Users  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  currentLat  Float?
  currentLong Float?

  image   Image?  @relation(fields: [imageId], references: [id])
  imageId String? @unique

  license   DriverLicense? @relation(fields: [licenseId], references: [id])
  licenseId String?        @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ------------------- DRIVER LICENSE -------------------
model DriverLicense {
  id                String      @id @default(uuid())
  licenseNumber     String
  licenseType       LicenseType
  licenseExpiration DateTime

  photoFront String?
  photoBack  String?

  driverProfile DriverProfile?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

enum LicenseType {
  A
  B
  C
  D
  E
}

// ------------------- CHILDREN -------------------
model Children {
  id       String @id @default(uuid())
  nom      String
  prenom   String
  adresse  String
  homeLat  Float
  homeLong Float

  arrivalTime   String
  departureTime String

  school   School @relation(fields: [schoolId], references: [id], onDelete: Restrict)
  schoolId String

  imageprofile   Image  @relation(fields: [imageprofileId], references: [id])
  imageprofileId String @unique

  parent   Users  @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId String

  // Abonnement (0 ou 1) — relation inverse (Subscription possède la FK childId)
  subscription Subscription?

  bus   Bus?    @relation(fields: [busId], references: [id])
  busId String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  scanLogs  ScanLog[]
  anomalies Anomaly[]
}

// ------------------- SCHOOL -------------------
model School {
  id         String @id @default(uuid())
  nom        String
  adresse    String
  schoolLat  Float
  schoolLong Float

  children Children[]
}

// ------------------- IMAGE -------------------
model Image {
  id  String @id @default(uuid())
  url String

  // relations inverses (pas de fields/references ici)
  child  Children?      @relation
  driver DriverProfile? @relation
}

// ------------------- SUBSCRIPTION -------------------
model Subscription {
  id          String  @id @default(cuid())
  stripeSubId String? @unique
  plan        Plan
  status      String
  emailSent   Boolean @default(false)

  cancelAtPeriodEnd Boolean  @default(false)
  createdAt         DateTime @default(now())

  // Lien vers le parent (le parent qui paie)
  parent   Users  @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId String

  // Un abonnement concerne un seul enfant ; childId est unique pour éviter plusieurs abonnements pour le même enfant
  child   Children @relation(fields: [childId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  childId String   @unique
}

enum Plan {
  MONTHLY
  YEARLY
}

// ------------------- BUS -------------------
model Bus {
  id        String    @id @default(uuid())
  matricule String    @unique
  brand     String
  seats     Int
  status    BusStatus @default(ACTIF)

  driver   Users  @relation(fields: [driverId], references: [id])
  driverId String

  children Children[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  scanLogs  ScanLog[]
  anomalies Anomaly[]
}

enum BusStatus {
  ACTIF
  MAINTENANCE
}

// ------------------- SCAN LOGS -------------------
model ScanLog {
  id      String   @id @default(uuid())
  child   Children @relation(fields: [childId], references: [id])
  childId String

  bus   Bus    @relation(fields: [busId], references: [id])
  busId String

  driver   Users  @relation(fields: [driverId], references: [id])
  driverId String

  type ScanType

  lat  Float?
  long Float?

  createdAt DateTime @default(now())
}

enum ScanType {
  BOARDING
  DROPOFF
}

// ------------------- ANOMALIES -------------------
model Anomaly {
  id          String @id @default(uuid())
  description String

  child   Children @relation(fields: [childId], references: [id])
  childId String

  bus   Bus    @relation(fields: [busId], references: [id])
  busId String

  driver   Users  @relation(fields: [driverId], references: [id])
  driverId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
